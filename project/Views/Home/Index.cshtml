@{
    ViewData["Title"] = "Inmobi-Tec";
}

<div class="text-center">
    <h1 class="display-4">Sistema de Gestión Inmobiliario</h1>
    
</div>
    <div class="bienvenida-divertida">
        <p>
            <span class="emoji-casa">🏠</span>
            <span class="bienvenida-titulo">¡Bienvenido a Inmobi-Tec!</span><br>
            <span class="bienvenida-texto">¿Listo para convertirte en gestor inmobiliario?</span><br>
            <span class="bienvenida-texto">Acá podés domar inquilinos, domar propietarios y firmar contratos como un verdadero profesional.</span><br>
            <span class="bienvenida-remate">¡Gestioná todo con un par de clics y sentite el <b>Messi</b> de los alquileres!</span>
        </p>
    </div>
    <style>
        .bienvenida-divertida {
            background: #fff8f0;
            border-radius: 18px;
            box-shadow: 0 2px 12px 0 #b6a88a33;
            padding: 2rem 1.5rem 1.5rem 1.5rem;
            margin: 1.5rem auto 1rem auto;
            max-width: 600px;
            text-align: center;
            border: 2px solid #e0d3c2;
        }
        .bienvenida-titulo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #7c5c3e;
            letter-spacing: 1px;
        }
        .bienvenida-texto {
            color: #5a4633;
            font-size: 1.08rem;
            display: block;
            margin-bottom: 0.2em;
        }
        .bienvenida-remate {
            color: #b07d2c;
            font-size: 1.1rem;
            font-weight: 500;
            margin-top: 0.5em;
            display: block;
        }
        .emoji-casa {
            font-size: 2.2rem;
            vertical-align: middle;
            margin-bottom: 0.2em;
            display: block;
        }
        .img-shadow {
            box-shadow: 0 10px 28px rgba(0,0,0,0.20);
            border-radius: 0.5rem;
            transition: box-shadow .18s ease, transform .18s ease;
            transform-origin: center;
        }
        .img-shadow:hover {
            box-shadow: 0 18px 40px rgba(0,0,0,0.28);
            transform: scale(0.98);
        }
    </style>
<div class="d-flex justify-content-center align-items-start gap-5 mt-4" style="min-height: 30vh;">
    <div class="text-center mb-4" style="max-width: 400px; width: 100%;">
        <h3 class="mb-3">Gestión de Inquilinos</h3>
        <img src="@Url.Content("~/images/Inquilinos.png")"
             alt="Nuevo Inquilino"
             class="img-fluid img-shadow mb-4"
             style="max-width: 100%; object-fit: contain; display: block; border: solid rgb(197, 192, 192); cursor:pointer; margin: 0 auto;"
             onclick="window.location.href='/Inquilino'" />
    </div>
    <div class="text-center mb-4" style="max-width: 400px; width: 100%;">
        <h3 class="mb-3">Gestión de Propietarios</h3>
        <img src="@Url.Content("~/images/Propietarios.png")"
             alt="Nuevo Propietario"
             class="img-fluid img-shadow mb-4"
             style="max-width: 100%; object-fit: contain; display: block; border: solid rgb(197, 192, 192); cursor:pointer; margin: 0 auto;"
             onclick="window.location.href='/Propietario'" />
    </div>
</div>
